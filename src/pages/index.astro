---
import IndexPage from "@app/pages/IndexPage";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { createProps, type PageProps } from "@/lib";
import ReactScan from "@/components/utility/ReactScan.astro";

const props: PageProps = createProps({
  title: "home",
  description:
    "home page for the base astro example by copperdevs which is a simple template project :3",
  image: "banner.png",
});
---

<BaseLayout props={props}>
  <ReactScan enabled={false} />
  <IndexPage props={props} client:load />
</BaseLayout>
